<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="13dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="09197664124"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:layout_weight="2"
            android:gravity="end" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="شماره تلفن 1 : "
            android:textSize="20sp"
            android:layout_weight="1"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="09197664124"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:layout_weight="2"
            android:gravity="end" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="شماره تلفن 2 : "
            android:textSize="20sp"
            android:layout_weight="1"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="09197664124"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:layout_weight="2"
            android:gravity="end" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="شماره تلفن 3 : "
            android:textSize="20sp"
            android:layout_weight="1"
            />


    </LinearLayout>


    <TextView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="کد نمایندگی : " />


    <TextView
        android:id="@+id/region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ناحیه : "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/is_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ستاره :"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="علت ستاره :"
        android:textSize="20sp"
         />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="توضیحات :" />

    <TextView
        android:id="@+id/have"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="دارد :" />

    <TextView
        android:id="@+id/not_have"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="ندارد :" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#673AB7"/>
</LinearLayout>